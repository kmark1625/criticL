<p id="notice"><%= notice %></p>

<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release date</th>
      <th>Runtime</th>
      <th>Director</th>
      <th>Cast</th>
      <th>Poster url</th>
      <th>Avg rating</th>
      <th>Summary</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.runtime %></td>
        <td><%= movie.director %></td>
        <td><%= movie.cast %></td>
        <td><img src="/images/<%=movie.poster_url.split("/")[-1] %>"></td>
        <td><%= movie.avg_rating %></td>
        <td><%= movie.summary %></td>
        <td><%= movie.creator_id %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

