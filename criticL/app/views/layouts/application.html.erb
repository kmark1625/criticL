<!DOCTYPE html>
<html>
<head>
  <title>CriticL</title>
  <%= javascript_include_tag 'application' %>
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body class="background">
  <nav class="navbar navbar-inverse mine">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand mine" href="/movies">criticL</a>
      </div>
      <ul class="nav navbar-nav mine">
      <% if logged_in? && current_user %>
        <li class="active"><%= link_to "Log Out", logout_path, method: :delete %></li>
        <li class="active"><%= link_to "#{current_user.username}", current_user %></li>
      <% else %>
        <li class="active"><%= link_to "Log In", login_path%></li>
        <li class="active"><%= link_to "Register", new_user_path%></li>
      <% end %>
      </ul>
    </div>
  </nav>
  <div class="container-fluid">
    <%= yield %>
  </div>
  <footer class="footer">
    Copyright
  </footer>

</body>
</html>
