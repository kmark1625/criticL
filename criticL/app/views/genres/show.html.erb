<p id="notice"><%= notice %></p>

<p>
  <h1><%= @genre.name %></h1>
</p>

<div class="row">
  <div class="col-md-10">
    <table class="index table-responsive">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Avg rating</th>
          <th>Summary</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td><img class="poster" src="<%=movie.poster_url%>"></td>
            <td><a href="/movies/<%= movie.id %>"><%= movie.title %></a></td>
            <td><%= movie.avg_rating.to_f %></td>
            <td><%= movie.summary %></td>
            <td><%= movie.creator_id %></td>
            <% if current_user && current_user.id == movie.creator_id %>
              <td><%= link_to 'Show', movie %></td>
              <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
              <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="sidebar col-md-2">
    <strong>Genres</strong>
    <ul>
      <% @genres.each do |genre| %>
        <li class="active"><%= link_to "#{genre.name}", genre %></li>
      <% end %>
    </ul>
  </div>
</div>
<br>
